@model IEnumerable<SpeedyWheelsRentals.Models.Reservation>

@{
    ViewData["Title"] = "Index";
}
<body style="background-color: #FEFFFF;">
    <h1 class="text-center text-black" style="font-weight: 400; font-size: 40px;">Reservations</h1>
    <div style="background-color: #D9D9D9; padding: 50px;">
        <p>
            <a style="background-color: #3AAFA9; color: white; padding-left: 110px; padding-right: 115px" type="button" class="btn btn-primary" asp-action="Create">Create New Reservation</a>
        </p>
        <p>
            <a style="background-color: #3AAFA9; color: white; margin-top: 10px; padding-left: 110px; padding-right: 90px" type="button" class="btn btn-primary" asp-action="ShowSearchForm">Search Existing Reservation</a>
        </p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReservationCost)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vehicle.Make)

            </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ReservationCost)

                </td>
            <td>
                            <a style="text-decoration: none; color: black;" asp-action="Edit" asp-route-id="@item.ReservationId">Edit</a> |
                            <a style="text-decoration: none; color: black;" asp-action="Details" asp-route-id="@item.ReservationId">Details</a> |
                            <a style="text-decoration: none; color: black;" asp-action="Delete" asp-route-id="@item.ReservationId">Delete</a> |
                            <a style="text-decoration: none; color: black;" asp-action="Billing" asp-route-id="@item.ReservationId">Billing</a>
                
            </td>
        </tr>
}
    </tbody>
</table>
    </div>
    </body>

