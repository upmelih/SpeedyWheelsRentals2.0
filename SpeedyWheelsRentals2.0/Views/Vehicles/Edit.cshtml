@model SpeedyWheelsRentals.Models.Vehicle

@{
    ViewData["Title"] = "Edit";
}

<h1 style="font-weight: 500; font-size: 40px; text-align:center;">Edit Vehicle</h1>

<body style="background-color: #FEFFFF;">
    <div style="background-color: #D9D9D9; padding: 50px; margin-bottom: 100px">
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VehicleId" />
            <div class="form-group">
                <label asp-for="Make" class="control-label"></label>
                <input asp-for="Make" class="form-control" />
                <span asp-validation-for="Make" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegistrationNumber" class="control-label"></label>
                <input asp-for="RegistrationNumber" class="form-control" />
                <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" asp-items="@(new SelectList(ViewBag.Status, "Value", "Text"))" class="form-control"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DailyRentalPrice" class="control-label"></label>
                <input asp-for="DailyRentalPrice" class="form-control" />
                <span asp-validation-for="DailyRentalPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                        <input style="background-color: #3AAFA9; color: white; margin-top: 20px; padding-left: 155px; padding-right: 155px" type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
            <a style="text-decoration: none; color: black;" asp-action="Index">Back to List</a>
</div>
    </div>
    </body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
