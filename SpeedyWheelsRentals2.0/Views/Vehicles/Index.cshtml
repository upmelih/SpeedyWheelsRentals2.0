@model IEnumerable<SpeedyWheelsRentals.Models.Vehicle>

@{
    ViewData["Title"] = "Index";
}
<body style="background-color: #FEFFFF;">
    <h1 class="text-center text-black" style="font-weight: 400; font-size: 40px;">Vehicles</h1>
    <div style="background-color: #D9D9D9; padding: 50px;">
        <p>
            <a style="background-color: #3AAFA9; color: white; padding-left: 110px; padding-right: 115px" type="button" class="btn btn-primary" asp-action="Create">Create New Vehicle</a>
        </p>
        <p>
            <a style="background-color: #3AAFA9; color: white; margin-top: 10px; padding-left: 110px; padding-right: 90px" type="button" class="btn btn-primary" asp-action="ShowSearchForm">Search Existing Vehicle</a>
        </p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Make)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegistrationNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DailyRentalPrice)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Make)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>

                <td>
                    @Html.DisplayFor(modelItem => item.DailyRentalPrice)
                </td>
            <td>
                            <a style="text-decoration: none; color: black;" asp-action="Edit" asp-route-id="@item.VehicleId">Edit</a> |
                            <a style="text-decoration: none; color: black;" asp-action="Details" asp-route-id="@item.VehicleId">Details</a> |
                            <a style="text-decoration: none; color: black;" asp-action="Delete" asp-route-id="@item.VehicleId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
    </div>
    </body>
