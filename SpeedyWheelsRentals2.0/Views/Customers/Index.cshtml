@model IEnumerable<SpeedyWheelsRentals.Models.Customer>

@{
    ViewData["Title"] = "Index";
}
<body style="background-color: #FEFFFF;">
    <h1 class="text-center text-black" style="font-weight: 400; font-size: 40px;">Customers</h1>
    <div style="background-color: #D9D9D9; padding: 50px;">

<p>
        <a style="background-color: #3AAFA9; color: white; padding-left: 110px; padding-right: 115px"  type="button" class="btn btn-primary" asp-action="Create">Create New Customer</a>
    </p>
    <p>
        <a style="background-color: #3AAFA9; color: white; margin-top: 10px; padding-left: 110px; padding-right: 90px"  type="button" class="btn btn-primary" asp-action="ShowSearchForm">Search Existing Customer</a>
    </p>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                            <a style="text-decoration: none; color: black;" asp-action="Edit" asp-route-id="@item.CustomerId">Edit</a> |
                            <a style="text-decoration: none; color: black;" asp-action="Details" asp-route-id="@item.CustomerId">Details</a> |
                            <a style="text-decoration: none; color: black;" asp-action="Delete" asp-route-id="@item.CustomerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
    </div>
</body>
